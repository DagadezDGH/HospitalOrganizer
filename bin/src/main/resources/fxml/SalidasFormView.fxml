      <ComboBox fx:id="articulosCombo" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
