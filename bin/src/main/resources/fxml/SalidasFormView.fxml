            <TableColumn fx:id="codArticulo" prefWidth="75.0" text="Codigo articulo" />
            <TableColumn fx:id="nombre" prefWidth="120.0" text="Nombre" />
            <TableColumn fx:id="descripcion" prefWidth="120.0" text="Descripcion" />
