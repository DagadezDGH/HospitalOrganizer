<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="view" prefHeight="400.0" prefWidth="600.0" styleClass="green" stylesheets="@../css/Clasico.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="NEVER" />
      <ColumnConstraints maxWidth="1.7976931348623157E308" />
      <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="14.0" prefWidth="47.0" />
      <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="50.0" prefWidth="167.0" />
      <ColumnConstraints maxWidth="1.7976931348623157E308" minWidth="50.0" />
      <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
   </rowConstraints>
   <children>
      <HBox alignment="CENTER_RIGHT" styleClass="blue" stylesheets="@../css/Clasico.css" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
      </HBox>
      <TableView fx:id="tablaSalidaArticulo" styleClass="blue" stylesheets="@../css/Clasico.css" GridPane.columnSpan="6" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3">
         <columns>
            <TableColumn fx:id="lugarColumn" prefWidth="75.0" text="Lugar" />
            <TableColumn fx:id="motivoColumn" prefWidth="75.0" text="Motivo" />
            <TableColumn fx:id="responsableColumn" prefWidth="75.0" text="Responsable" />
            <TableColumn fx:id="fechaColumn" prefWidth="75.0" text="Fecha" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
      </TableView>
      <Button fx:id="volverButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onVolverAction" styleClass="buttons" GridPane.columnIndex="5" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
         <graphic>
            <ImageView pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/home_icon-iconsx32.png" />
               </image>
            </ImageView>
         </graphic>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
      </Button>
      <Button fx:id="mostrarbtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onMostrarAction" styleClass="buttons" stylesheets="@../css/Clasico.css" text="Mostrar" GridPane.columnIndex="4" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </Button>
      <Button fx:id="checkearbtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onCheckAction" styleClass="buttons" stylesheets="@../css/Clasico.css" text="Checkear" GridPane.columnIndex="5" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </Button>
   </children>
</GridPane>
